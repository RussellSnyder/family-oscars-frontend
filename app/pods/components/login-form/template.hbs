<form onsubmit={{action "onsubmit"}}>
  <div class="form-group">
    <label >First Name</label>
    {{input required=true type="text" class="form-control"
      placeholder="Enter name" value=name}}
    <small class="form-text text-muted">Your first name</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    {{input required="true" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" value=password}}
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
